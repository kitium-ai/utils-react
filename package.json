{
  "name": "@kitiumai/utils-react",
  "version": "3.0.0",
  "description": "Comprehensive React utilities and custom hooks for KitiumAI projects",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.cjs"
    },
    "./hooks/async": {
      "types": "./dist/hooks/async/index.d.ts",
      "import": "./dist/hooks/async/index.js",
      "require": "./dist/hooks/async/index.cjs"
    },
    "./hooks/state": {
      "types": "./dist/hooks/state/index.d.ts",
      "import": "./dist/hooks/state/index.js",
      "require": "./dist/hooks/state/index.cjs"
    },
    "./hooks/form": {
      "types": "./dist/hooks/form/index.d.ts",
      "import": "./dist/hooks/form/index.js",
      "require": "./dist/hooks/form/index.cjs"
    },
    "./hooks/browser": {
      "types": "./dist/hooks/browser/index.d.ts",
      "import": "./dist/hooks/browser/index.js",
      "require": "./dist/hooks/browser/index.cjs"
    },
    "./hooks/events": {
      "types": "./dist/hooks/events/index.d.ts",
      "import": "./dist/hooks/events/index.js",
      "require": "./dist/hooks/events/index.cjs"
    },
    "./hooks/lifecycle": {
      "types": "./dist/hooks/lifecycle/index.d.ts",
      "import": "./dist/hooks/lifecycle/index.js",
      "require": "./dist/hooks/lifecycle/index.cjs"
    },
    "./hooks/performance": {
      "types": "./dist/hooks/performance/index.d.ts",
      "import": "./dist/hooks/performance/index.js",
      "require": "./dist/hooks/performance/index.cjs"
    },
    "./hooks/ui": {
      "types": "./dist/hooks/ui/index.d.ts",
      "import": "./dist/hooks/ui/index.js",
      "require": "./dist/hooks/ui/index.cjs"
    },
    "./hooks/utility": {
      "types": "./dist/hooks/utility/index.d.ts",
      "import": "./dist/hooks/utility/index.js",
      "require": "./dist/hooks/utility/index.cjs"
    },
    "./integrations": {
      "types": "./dist/integrations/index.d.ts",
      "import": "./dist/integrations/index.js",
      "require": "./dist/integrations/index.cjs"
    },
    "./integrations/logger": {
      "types": "./dist/integrations/useLogger.d.ts",
      "import": "./dist/integrations/useLogger.js",
      "require": "./dist/integrations/useLogger.cjs"
    },
    "./integrations/types": {
      "types": "./dist/integrations/useTypes.d.ts",
      "import": "./dist/integrations/useTypes.js",
      "require": "./dist/integrations/useTypes.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./utils/ssr": {
      "types": "./dist/utils/ssr.d.ts",
      "import": "./dist/utils/ssr.js",
      "require": "./dist/utils/ssr.cjs"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.cjs",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "dist/**/*.js.map",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "!dist/**/__tests__/**",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "MIGRATION.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "changeset": "ensure-changeset && changeset",
    "version": "ensure-changeset && changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "keywords": [
    "react",
    "hooks",
    "utilities",
    "typescript",
    "usehooks",
    "react-hooks",
    "custom-hooks",
    "kitiumai",
    "kitium",
    "react-utils",
    "react-hooks",
    "react-utilities",
    "react-custom-hooks",
    "react-hooks-utilities"
  ],
  "author": "KitiumAI",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/utils-react.git"
  },
  "bugs": {
    "url": "https://github.com/kitium-ai/utils-react/issues"
  },
  "homepage": "https://github.com/kitium-ai/utils-react#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "peerDependenciesMeta": {
    "graphql": {
      "optional": true
    }
  },
  "devDependencies": {
    "@kitiumai/config": "^3.1.4",
    "@kitiumai/lint": "^3.0.0",
    "@kitiumai/scripts": "^2.0.0",
    "@kitiumai/vitest-helpers": "^3.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.1.3",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.0",
    "prettier": "^3.6.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  },
  "dependencies": {
    "@kitiumai/error": "^3.0.0",
    "@kitiumai/logger": "^3.0.1",
    "@kitiumai/types": "^3.0.0",
    "@kitiumai/utils-ts": "^3.0.0"
  }
}
